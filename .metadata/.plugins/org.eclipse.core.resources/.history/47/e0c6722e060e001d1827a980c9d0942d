package aula1;

import java.util.Scanner;

public class Banco {

	Integer operacao;

	public Banco() {

	}

	public void cadastrar() {

	}

	public void emprestimo() {

	}

	public void listar() {

	}

	public void sair() {

	}

	public void selecionaOperacao() {

		do {
			
			Scanner menu = new Scanner (System.in);

	        System.out.print("##--Bem vindo ao Banco--##\n\n");
	        System.out.print("|-----------------------------|\n");
	        System.out.print("| Opção 1 - Novo Cadastro     |\n");
	        System.out.print("| Opção 2 - Empréstimos       |\n");
	        System.out.print("| Opção 3 - Listar            |\n");
	        System.out.print("| Opção 4 - Sair              |\n");
	        System.out.print("|-----------------------------|\n");
	        System.out.print("Digite uma opção: ");

	        operacao = menu.nextInt();
			
			
		} while (operacao != 0);

	}

}
